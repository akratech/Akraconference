- page_title @space.name

- spaces_menu_at :home

= render :partial => 'spaces/menu'

- if mod_enabled?("events") && !@current_events.empty?
  #events-current.content-block.event-block.events-hapenning-now
    .content-block-header
      %h3= t('.events_now')
    .content-block-middle
      - for event in @current_events do
        = render :partial => "events/unified_event", :locals => { :event => event }

.content-block
  .content-block-header
    %h3= t('space.description')
  .content-block-middle
    = @space.description

-if can?(:read, @space.posts)
  = render :partial => 'latest_posts'

= render :partial => 'latest_users'

-if current_user && !current_user.eligible?
  .content-block-footer.content-block-footer-fancy{:style => "color: red"}
    Your 1 day trial has expired. Please click
    %a{:href => '/pricing'}> &nbsp; here &nbsp;
    to subscribe to any of our pricing packages to continue using our services!